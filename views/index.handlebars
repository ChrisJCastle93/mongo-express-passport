<div id="container" class="container">
<h1 class="text-center mb-3">{{title}}</h1>
<form id="form" action="/api/members" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input
      type="text"
      {{!-- id="nameInp" --}}
      name="name"
      class="form-control"
    />
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input
      type="email"
      {{!-- id="emailInp" --}}
      name="email"
      class="form-control"
    />
  </div>
  <input
    type="submit"
    value="Add Member"
    id="addbtn"
    class="btn btn-primary btn-block"
  />
</form>
<br />
<h4>Members</h4>
<ul class="list-group">
  {{#each members}}
    <li class="list-group-item" data-id="{{this.id}}"> {{this.name}}: {{this.email}}
      <span style="float: right">
        <form id="form" style="display: inline" action="/api/members/{{this.id}}/delete" method="POST">
          <input
            type="submit"
            value="Delete Member"
            class="btn btn-danger btn2"
          />
        </form>
        <input style="display: inline" type="submit" value="Edit Member" class="btn btn-light btn3"></input>
      </span>
    </li>
  {{/each}}
</ul>
<a href="/api/members" class="btn btn-light mt-4">Visit API</a>
</div>